<idea-plugin>
    <id>com.myvirtualab.intellij.loonar</id>
    <name>Loonar Tasks</name>
    <vendor url="https://www.loonar.it/">Loonar</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.tasks</depends>

    <extensions defaultExtensionNs="com.intellij.tasks">
        <repositoryType implementation="com.myvirtualab.intellij.loonar.LoonarRepositoryType"/>
    </extensions>
</idea-plugin>
